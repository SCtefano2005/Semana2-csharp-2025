<Window x:Class="Semana2.ListadoIngresos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Listado de Ingresos" Height="500" Width="900" Background="#f9fafb">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Listado de Ingresos" 
                   FontSize="22" FontWeight="Bold" 
                   Foreground="#111827"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"
                   Grid.Row="0"/>

        <!-- DataGrid con los campos solicitados -->
        <DataGrid Name="dgIngresos" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  CanUserAddRows="False"
                  Grid.Row="1"
                  Margin="0,0,0,20"
                  Background="White"
                  BorderBrush="#E5E7EB"
                  BorderThickness="1"
                  RowHeight="30"
                  FontSize="14"
                  AlternatingRowBackground="#F3F4F6">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="*" />
                <DataGridTextColumn Header="Turno" Binding="{Binding Turno}" Width="*" />
                <DataGridTextColumn Header="Conductor" Binding="{Binding Conductor}" Width="*" />
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*" />
                <DataGridTextColumn Header="Peso" Binding="{Binding Peso}" Width="*" />
                <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Filtros de búsqueda -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <StackPanel Margin="5">
                <TextBlock Text="Fecha Inicio" FontWeight="Bold"/>
                <DatePicker Name="dpFechaInicio" Width="150"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Fecha Fin" FontWeight="Bold"/>
                <DatePicker Name="dpFechaFin" Width="150"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Placa" FontWeight="Bold"/>
                <TextBox Name="txtPlacaFiltro" Width="120"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Nombre Conductor" FontWeight="Bold"/>
                <TextBox Name="txtConductorFiltro" Width="150"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="Nombre Producto" FontWeight="Bold"/>
                <TextBox Name="txtProductoFiltro" Width="150"/>
            </StackPanel>

            <Button Content="Buscar" Width="100" Height="30"
                    Background="#2563EB" Foreground="White"
                    FontWeight="Bold" Margin="15,20,0,0"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
