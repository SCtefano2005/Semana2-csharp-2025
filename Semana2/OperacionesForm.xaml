<Window x:Class="Semana2.OperacionesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2"
        mc:Ignorable="d"
        Title="OperacionesForm" Height="700" Width="700" Background="#f3f4f6">

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" >

            <!-- Título -->
            <TextBlock Text="Formulario de Operaciones" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#111827"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Tipo Documento -->
            <TextBlock Text="Tipo de Documento:" FontSize="14" Margin="0,8,0,2"/>
            <ComboBox Name="cbTipoDocumento" Height="32" Width="200">
                <ComboBoxItem Content="DNI"/>
                <ComboBoxItem Content="Carné Extranjería"/>
                <ComboBoxItem Content="Pasaporte"/>
            </ComboBox>

            <!-- Numero Documento -->
            <TextBlock Text="Número de Documento:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtNumeroDocumento" Height="32" Width="200"/>

            <!-- Placa -->
            <TextBlock Text="Placa:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtPlaca" Height="32" Width="200"/>

            <!-- Turno -->
            <TextBlock Text="Turno:" FontSize="14" Margin="0,8,0,2"/>
            <ComboBox Name="cbTurno" Height="32" Width="200">
                <ComboBoxItem Content="Mañana"/>
                <ComboBoxItem Content="Tarde"/>
                <ComboBoxItem Content="Noche"/>
            </ComboBox>

            <!-- Nombre Conductor -->
            <TextBlock Text="Nombre del Conductor:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtNombreConductor" Height="32" Width="300"/>

            <!-- Nombre Cliente -->
            <TextBlock Text="Nombre del Cliente:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtNombreCliente" Height="32" Width="300"/>

            <!-- Fecha y Hora -->
            <TextBlock Text="Fecha y Hora:" FontSize="14" Margin="0,8,0,2"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker Name="dpFecha" Height="32" Width="200"/>
                <TextBox Name="txtHora" Height="32" Width="100" Text="HH:MM"/>
            </StackPanel>

            <!-- Peso Ingreso -->
            <TextBlock Text="Peso de Ingreso (kg):" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtPesoIngreso" Height="32" Width="150"/>

            <!-- Botón -->
            <Button Content="Grabar" 
                    Height="40" Width="120" 
                    Background="#2563EB" 
                    Foreground="White" 
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
