<Window x:Class="Semana2.NuevoConductor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2"
        mc:Ignorable="d"
        Title="NuevoConductor" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">

            <!-- Título -->
            <TextBlock Text="Registro de Conductor" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#111827"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Nombre Conductor -->
            <TextBlock Text="Nombre del Conductor:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtNombreConductor" Height="32" Width="300"/>

            <!-- Licencia -->
            <TextBlock Text="Licencia:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtLicencia" Height="32" Width="200"/>

            <!-- Transporte -->
            <TextBlock Text="Transporte:" FontSize="14" Margin="0,8,0,2"/>
            <TextBox Name="txtTransporte" Height="32" Width="250"/>

            <!-- Botón -->
            <Button Content="Grabar" 
                    Height="40" Width="120" 
                    Background="#2563EB" 
                    Foreground="White" 
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
